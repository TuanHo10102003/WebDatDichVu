@model IEnumerable<WebTest.Models.EF.Service>

@foreach (var item in Model)
{if (item.PriceSale > 0)
    {

        var strImage = "";
        var img = item.ServiceImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImage = img.Image;
        }
        <div class="product-item @item.ServiceCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImage" alt="@item.Title">
                </div>
                <div data-id="@item.Id" class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-@(item.Id)">@item.Title</a></h6>

                    <div class="product_price">

                        @WebTest.Common.Common.FormatNumber(item.Price, 0) <span>@WebTest.Common.Common.FormatNumber(item.PriceSale, 0)</span>


                    </div>
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">ADD to cart</a></div>
        </div>

    }
}

