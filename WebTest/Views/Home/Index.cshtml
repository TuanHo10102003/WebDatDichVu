<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Đảm bảo ảnh được tải trước khi Flickity chạy
        document.querySelectorAll('img[data-lazyloaded]').forEach(img => {
            img.setAttribute("src", img.getAttribute("data-src"));
        });

        // Khởi tạo Flickity
        var slider = document.querySelector('.slider');
        var flkty = new Flickity(slider, {
            cellAlign: 'center',
            contain: true,
            wrapAround: true,
            autoPlay: 6000,
            pauseAutoPlayOnHover: true,
            prevNextButtons: true,
            adaptiveHeight: true,
            dragThreshold: 10,
            percentPosition: true,
            groupCells: 3,
            pageDots: true,
            groupCells: window.innerWidth < 768 ? 1 : 3
        });
        window.addEventListener("resize", function () {
            flkty.options.groupCells = window.innerWidth < 768 ? 1 : 3;
            flkty.resize();
        });
    });</script>


